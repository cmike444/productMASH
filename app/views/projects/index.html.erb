<br/>
<div class="row">
  <div class="col-md-12">
    <h3>My Projects</h3>
  </div>
</div>
<hr/>
<div id="projects" class="transitions-enabled">
  <%= link_to new_project_path do %>
    <div class="box" style="background: #f4f4f4;">
        
        <br/>
        <br/>
        <br/>
        <h1 class="text-center text-primary"><i class="fa fa-plus"></i></h1>
        <br/>
        <br/>
        <br/>
        
        <!-- <h4 class="text-center text-primary"><i class="fa fa-plus"></i>New Project</h4> -->
        
    </div>
  <% end %>
  <% @projects.each do |project| %>
    <div class="box">
      <%= link_to project_path(project) do %>
      <%= image_tag project.image %>
      <div class="view-project">
        <button class="btn btn-view-project">View Project</button>
      </div>
      <% end %>
      <div class="delete-project" data-toggle="modal" data-target="#delete-project-<%= project.id.to_s %>">
        <% if project.user == current_user %>
          <i class="fa fa-times"></i>
        <% end %>
      </div>

      <div class="modal fade" id="delete-project-<%= project.id.to_s %>">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true"><i class="fa fa-times"></i></span><span class="sr-only">Close</span></button>
              <h4 class="modal-title">Are you sure you want to delete this project?</h4>
            </div>
            <div class="modal-body">
              <p>You can archive this project</p>
              <p>You will be deleting all of the uploaded ideas, discussion and MASH scores associated to this project.</p>
            </div>
            <div class="modal-footer">
              <%= link_to project, :method => :delete, :data => {confirm: 'Are your sure?'}, class: 'btn btn-danger btn-modal' do %>
                <i class="fa fa-trash-o"></i>
                Delete Project
              <% end %>
            </div>
          </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
      </div><!-- /.modal -->
      <h4 class="text-center"><%= project.name %></h4>

      <div class="project-actions text-center">
      <%= link_to project_path(project) do %>
        <i class="fa fa-eye"></i>
      <% end %>
      <% if project.user == current_user %>
        <%= link_to edit_project_path(project) do %>
            <i class="fa fa-edit"></i>
          <% end %>
      <% end %>
      <%= link_to " ", id: project.id.to_s.prepend('project-'), data: { toggle: 'tooltip', placement: 'top' }, title: project.description  do %>
          <i class="fa fa-info-circle"></i>
        <% end %>
        <script type="text/javascript">
          $('#project-<%= project.id.to_s %>').tooltip();
          
        </script>
    </div>
    </div>
  <% end %>
</div>
<br/>